<% if product_model.errors.any?%>
  <span>Verifique os seguintes erros:</span>
  <ul>
  <% @product_model.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>

<%= form_with(model: product_model) do |form| %>
  <div>
    <%= form.label :name  %>
    <%= form.text_field(:name) %>
  </div>
  <div>
    <%= form.label :supplier_id %>
    <%= form.collection_select :supplier_id, Supplier.order(:trade_name), :id, :trade_name, {include_blank: true} %>
  </div>
  <div>
    <%= form.label :weight %>
    <%= form.number_field(:weight) %> (g)
  </div>
  <div>
    <%= form.label :height %>
    <%= form.number_field(:height) %> (cm)
  </div>
  <div>
    <%= form.label :width %>
    <%= form.number_field(:width) %> (cm)
  </div>
  <div>
    <%= form.label :length  %>
    <%= form.number_field(:length) %> (cm)
  </div>


  <%= form.submit 'Salvar' %>

<% end %>