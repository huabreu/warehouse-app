
<% if @warehouse.errors.any?%>
<span>Verifique os seguintes erros:</span>
<ul>
<% @warehouse.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
<% end %>
</ul>
<% end %>

<h1>Novo Galpão</h1>

<%= form_with(model: @warehouse) do |form| %>
  <div>
    <%= form.label :name, 'Nome' %>
    <%= form.text_field(:name) %>
  </div>
  <div>
    <%= form.label :code, 'Código' %>
    <%= form.text_field(:code) %>
  </div>
  <div>
    <%= form.label :description, 'Descrição' %>
    <%= form.text_area(:description) %>
  </div>
  <div>
    <%= form.label :address, 'Endereço' %>
    <%= form.text_field(:address) %>
  </div>
  <div>
    <%= form.label :city, 'Cidade' %>
    <%= form.text_field(:city) %>
  </div>
  <div>
    <%= form.label :state, 'Estado' %>
    <%= form.text_field(:state) %>
  </div>
  <div>
    <%= form.label :zip_code, 'CEP' %>
    <%= form.text_field(:zip_code) %>
  </div>
  <div>
    <%= form.label :total_area, 'Área Total' %>
    <%= form.number_field(:total_area) %>
  </div>
  <div>
    <%= form.label :useful_area, 'Área Útil' %>
    <%= form.number_field(:useful_area) %>
  </div>
  <%= form.submit 'Salvar' %>

<% end %>